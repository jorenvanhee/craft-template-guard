{% import "_includes/forms" as forms %}

{{ forms.autosuggestField({
    first: true,
    label: 'Template',
    instructions: 'This template will be used for the login page. Leave empty for the default.',
    name: 'template',
    suggestions: craft.cp.getTemplateSuggestions(),
    value: settings.template,
}) }}

{{ forms.textField({
    label: 'Login route',
    instructions: 'The URI for the login page.',
    name: 'loginRoute',
    value: settings.loginRoute,
    required: true,
    errors: settings.getErrors('loginRoute')
}) }}

{{ forms.textField({
    label: 'Max attempts',
    instructions: 'Maximum allowed failed login attempts.',
    name: 'maxAttempts',
    value: settings.maxAttempts,
    required: true,
    errors: settings.getErrors('maxAttempts')
}) }}

{{ forms.textField({
    label: 'Max attempts period in seconds',
    instructions: 'Over what period of time should the failed login attempts be counted.',
    name: 'maxAttemptsPeriodInSeconds',
    value: settings.maxAttemptsPeriodInSeconds,
    required: true,
    errors: settings.getErrors('maxAttemptsPeriodInSeconds')
}) }}
